@model IEnumerable<AdminLTE1.ViewModels.PermissionViewModel>
@{
    ViewBag.Title = "Menu Permission";
}
@if (Model.Any())
{
    <div class="col-md-12">
        <div class="card">
            <div class="card-body p-0">
                <table id="idgrid" class="table">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Permission Id</th>
                            <th>Name</th>
                            <th>Path</th>
                            <th>ParentId</th>
                            <th>MenuLevel</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var menu in Model)
                        {
                            <tr>
                                <td><input type="checkbox" disabled value="@menu.Id" checked="@menu.HasAccess" /></td>
                                <td>@menu.Id</td>
                                <td>@menu.Name</td>
                                <td>@menu.Path</td>
                                <td>@menu.ParentId</td>
                                <td>@menu.MenuLevel</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No menu created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a menu
            </h5>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Permission" asp-action="CreateMenu">
                Create Menu
            </a>
        </div>
    </div>
}
